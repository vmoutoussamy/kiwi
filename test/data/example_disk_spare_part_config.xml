<?xml version="1.0" encoding="utf-8"?>

<image schemaversion="7.3" name="LimeJeOS">
    <description type="system">
        <author>Marcus Sch√§fer</author>
        <contact>ms@suse.com</contact>
        <specification>
            Unit testing for spare_part_is_last in combination with root resize
        </specification>
    </description>
    <profiles>
        <profile name="Invalid" description="Invalid setup"/>
        <profile name="OK" description="Good setup"/>
    </profiles>
    <preferences>
        <version>1.13.2</version>
        <packagemanager>zypper</packagemanager>
        <locale>en_US</locale>
        <keytable>us.map.gz</keytable>
        <timezone>Europe/Berlin</timezone>
    </preferences>
    <preferences profiles="Invalid">
        <type image="oem" filesystem="ext4" spare_part_is_last="true"/>
    </preferences>
    <preferences profiles="OK">
        <type image="oem" filesystem="ext4" spare_part_is_last="true">
            <oemconfig>
                <oem-resize>false</oem-resize>
            </oemconfig>
        </type>
    </preferences>
    <repository>
        <source path="obs://13.2/repo/oss"/>
    </repository>
    <packages type="image">
        <package name="patterns-openSUSE-base"/>
    </packages>
    <packages type="bootstrap">
        <package name="udev"/>
        <package name="filesystem"/>
        <package name="glibc-locale"/>
    </packages>
</image>
